{
  "name": "wwjs",
  "version": "2.0.0",
  "description": "wware browser runtime library",
  "main": "index.html",
  "scripts": {
    "lint": "eslint src",
    "check": "npm run lint && npm run test",
    "build": "npm run check && webpack  --optimize-minimize --mode production --env=prod --display-modules",
    "build-dev": "webpack --env=dev --display-modules ",
    "doc": "node_modules/.bin/jsdoc  --configure .jsdoc.json --verbose;xdg-open ./docs/wwjs/2.0.0/index.html",
    "v:patch": "npm version --no-git-tag-version patch",
    "start:dev": "webpack-dev-server --open --progress --colors",
    "start": "npm run-script fetch:lib;webpack-dev-server --open --progress --colors --env=prod",
    "fetch:lib" : "echo fetch std lib from wware.org",
    "test": "node test/runner.node.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "> 0.25%, not dead",
          "modules": "amd",
          "useBuiltIns": false
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "testling": {
    "preprocess": "build/build.sh",
    "html": "spec/runner.html?src=build/output/knockout-latest.js&testling=true",
    "browsers": [
      "ie/6..latest",
      "chrome/20..latest",
      "firefox/3..latest",
      "safari/5.0.5..latest",
      "opera/11.0..latest",
      "iphone/6..latest",
      "ipad/6..latest"
    ]
  },
  "repository": {
    "type": "git",
    "url": "wwjs@scm.spolo.org:/home/source/wwjs/wware.git"
  },
  "author": {
    "name": "SanPolo Co.LTD",
    "email": "masol.li@gmail.com",
    "url": "https://www.wware.org"
  },
  "alternatives": {
    "precommit": "lint-staged",
    "promise-polyfill": "^8.1.0"
  },
  "dependencies": {
    "cash-dom": "^2.3.9",
    "loadjs": "^3.5.4"
  },
  "license": "WWARE LICENSE",
  "homepage": "https://www.wware.org",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "compression-webpack-plugin": "^2.0.0",
    "docdash": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "jsdoc": "^3.5.5",
    "lint-staged": "^8.0.4",
    "string-replace-loader": "^2.1.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  }
}
